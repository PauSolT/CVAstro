---
import Project from "../../components/Project.astro";
import Layout from "../../layouts/Layout.astro";
import { t, changeLanguage } from "i18next";

changeLanguage("ca");
---

<Layout>
    <div class="index">
        <section class="introduction">
            <video autoplay loop muted class="videoBg">
                <source
                    src="/src/assets/Videos/bilux_trailer.mp4"
                    type="video/mp4"
                />
            </video>
            <div class="heroContent">
                <h1>PAU SOLÃ‰</h1>
                <h2>{t("ocupation")}</h2>
                <h3>
                    {t("homeDescription")}
                </h3>
            </div>
        </section>

        <section class="projects">
            <h2>{t("projectsTitle")}</h2>
            <div class="projectList">
                <Project
                    title="BEKKUS"
                    genre={t("bekkusGenre")}
                    imageUrl="/img/projects/bekkus.webp"
                    description={t("bekkusDescription")}
                />
                <Project
                    title="BILUX"
                    genre={t("biluxGenre")}
                    imageUrl="/img/projects/bilux.webp"
                    description={t("biluxDescription")}
                />
                <Project
                    title="SLIME DEFENSE"
                    genre={t("slimeGenre")}
                    imageUrl="/img/projects/SlimeDefense.webp"
                    description={t("slimeDescription")}
                />
            </div>
        </section>
    </div>
</Layout>

<style>
    .index {
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
    }

    .introduction {
        height: 95vh;
        position: relative;
        width: 100%;
        display: flex;
        flex-direction: column;
        align-content: center;
        justify-content: center;
    }

    .videoBg {
        width: 100%;
        height: 100%;
        object-fit: cover;
        display: flex;
        opacity: 0.3;
    }

    .biluxTrailer {
        position: relative;
        width: auto;
        min-width: 100%;
        height: auto;
        min-height: 100%;
        background-size: cover;
    }

    .heroContent {
        position: absolute;
        width: 90%;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
    }

    .projectList {
        display: flex;
        gap: 20px;
        flex-wrap: wrap;
        justify-content: center;
        margin-bottom: 40px;
    }

    h1,
    h2 {
        color: #66fcf1;
    }

    h1 {
        font-size: clamp(1em, 7vw, 6rem);
        margin-bottom: 0;
    }

    h2 {
        font-size: clamp(1em, 3vw, 6rem);
    }

    h3 {
        color: #61ddd7;
        padding-bottom: 20%;
    }

    @media only screen and (max-width: 760px) {
        .projects {
            margin-left: 5%;
            margin-right: 5%;
        }
    }
    @media (min-aspect-ratio: 8/5) {
        .heroContent {
            padding-top: 100px;
        }
    }
    @media (min-aspect-ratio: 15/5) {
        .heroContent {
            padding-top: 150px;
        }
    }
</style>
