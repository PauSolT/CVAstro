---
import { Image } from "astro:assets";

const { title, description, srcImage, urlSite } = Astro.props;
---

<div class="game">
    <div class="gameHeader">
        <h3>{title}</h3>
        <h3>
            <a target="_blank" rel="noreferrer" href={urlSite}> INFO+ </a>
        </h3>
    </div>
    <Image src={srcImage} alt={title} class="responsiveImage" inferSize/>
    <p>{description}</p>
</div>

<style>
    .responsiveImage {
        width: clamp(50%, 90%, 100%);
        height: auto;
        max-width: 100%;
        max-height: 50%;
    }

    h3,
    h4 {
        color: #66fcf1;
    }
    p {
        color: #c5c6c7;
        text-align: justify;
    }

    .gameHeader {
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        a {
            text-decoration: none;
            color: #45a29e;
            border-style: solid;
            border-width: medium;
            border-radius: 10px;
            border-color: #45a29e;
            background-color: #1f2833;
            padding-right: 5px;
            padding-left: 5px;
            transition:
                color 0.3s ease-in-out,
                background-color 0.3s ease-in-out;
        }
    }
</style>
