---
import { Image } from "astro:assets";

const { title, description, srcImage, urlSite } = Astro.props;
---

<div class="game">
    <div class="gameHeader">
        <h3>{title}</h3>
        <h3>
            <a target="_blank" rel="noreferrer" href={urlSite}> INFO+ </a>
        </h3>
    </div>
    <Image src={srcImage} alt={title} class="responsiveImage" />
</div>
